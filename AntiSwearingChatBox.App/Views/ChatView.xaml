<Page
    x:Class="AntiSwearingChatBox.App.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="720" d:DesignWidth="1280"
    Title="Chat">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Chat Room"
                       Style="{StaticResource SubheadingTextStyle}"
                       Margin="16,12"/>
            
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="16,12">
                <TextBlock Text="Welcome, "
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="UsernameTextBlock"
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>
                <Button Content="Logout"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="16,0,0,0"
                        Click="LogoutButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Messages -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="16">
            <ItemsControl x:Name="MessagesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource MessageCardStyle}"
                                Margin="0,8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Username}"
                                           Style="{StaticResource BodyTextStyle}"
                                           FontWeight="Bold"
                                           Margin="0,0,8,4"/>
                                
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Content}"
                                           Style="{StaticResource BodyTextStyle}"
                                           TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Timestamp}"
                                           Style="{StaticResource BodyTextStyle}"
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Message Input -->
        <Grid Grid.Row="2" 
              Background="{StaticResource SecondaryBackgroundBrush}"
              Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="MessageTextBox"
                     Style="{StaticResource ChatInputStyle}"
                     materialDesign:HintAssist.Hint="Type your message..."
                     Margin="8"
                     KeyDown="MessageTextBox_KeyDown"/>
            
            <Button Grid.Column="1"
                    Content="Send"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="8"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Page> 