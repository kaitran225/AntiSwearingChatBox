<Window
    x:Class="AntiSwearingChatBox.App.Views.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:components="clr-namespace:AntiSwearingChatBox.App.Components"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Chat - Anti-Swearing Chat Box"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    AllowsTransparency="True"
    Background="{StaticResource PrimaryBackgroundBrush}"
    BorderThickness="0"
    FontFamily="Segoe UI"
    ResizeMode="CanResizeWithGrip"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="WindowBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignIconButton}"
            TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom Window Bar -->
        <components:WindowBar Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar with Conversation List -->
            <Border
                Grid.Column="0"
                Background="{StaticResource PrimaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
                <components:ConversationList 
                    x:Name="ConversationList"
                    IsAdmin="True"
                    ConversationSelected="ConversationList_ConversationSelected"
                    NewChatRequested="ConversationList_NewChatRequested"
                    AddConversationRequested="ConversationList_AddConversationRequested"
                    AdminDashboardRequested="ConversationList_AdminDashboardRequested" />
            </Border>

            <!-- Main Chat Area -->
            <components:ChatView 
                x:Name="ChatView"
                Grid.Column="1"
                MessageSent="ChatView_MessageSent"
                MenuRequested="ChatView_MenuRequested"
                AttachmentRequested="ChatView_AttachmentRequested" />

            <!-- Admin Dashboard Panel (Initially Hidden) -->
            <Grid
                x:Name="AdminDashboardPanel"
                Grid.Column="1"
                Background="{StaticResource PrimaryBackgroundBrush}"
                Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Admin Header -->
                <Border
                    Grid.Row="0"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid Margin="20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="22"
                                Height="22"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource PrimaryGreenBrush}"
                                Kind="ShieldAccount" />
                            <TextBlock
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="ADMIN DASHBOARD" />
                        </StackPanel>

                        <Button
                            x:Name="CloseAdminDashboardButton"
                            Grid.Column="1"
                            Style="{StaticResource WindowBarButtonStyle}"
                            Click="CloseAdminDashboardButton_Click">
                            <materialDesign:PackIcon
                                Width="16"
                                Height="16"
                                Foreground="{StaticResource SecondaryTextBrush}"
                                Kind="Close" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Admin Dashboard Content -->
                <ScrollViewer 
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Administration Panel"
                            Margin="0,0,0,16" />
                        
                        <TextBlock
                            FontSize="14"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Welcome to the Admin Dashboard. Here you can manage users, review flagged content, and monitor system metrics."
                            TextWrapping="Wrap"
                            Margin="0,0,0,24" />
                            
                        <!-- Sample content - would be replaced with actual admin features -->
                        <Border
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    Text="System Status"
                                    Margin="0,0,0,12" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="ACTIVE USERS" />
                                        <TextBlock
                                            FontSize="24"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryGreenBrush}"
                                            Text="128" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="FILTERED WORDS TODAY" />
                                        <TextBlock
                                            FontSize="24"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryGreenBrush}"
                                            Text="347" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <Border
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    Text="Content Moderation"
                                    Margin="0,0,0,12" />
                                
                                <Border
                                    Background="{StaticResource PrimaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Kind="AlertCircle"
                                            Foreground="{StaticResource PrimaryGreenBrush}"
                                            Width="20"
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0" />
                                            
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource PrimaryTextBrush}"
                                                Text="Flagged message from user58932" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{StaticResource SecondaryTextBrush}"
                                                Text="Message contained 3 filtered words - Medium severity"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        
                                        <Button
                                            Grid.Column="2"
                                            Content="REVIEW"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Foreground="{StaticResource PrimaryGreenBrush}" />
                                    </Grid>
                                </Border>
                                
                                <Border
                                    Background="{StaticResource PrimaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Kind="AlertCircle"
                                            Foreground="{StaticResource PrimaryGreenBrush}"
                                            Width="20"
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0" />
                                            
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource PrimaryTextBrush}"
                                                Text="Flagged message from user12445" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{StaticResource SecondaryTextBrush}"
                                                Text="Message contained 1 filtered word - Low severity"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        
                                        <Button
                                            Grid.Column="2"
                                            Content="REVIEW"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Foreground="{StaticResource PrimaryGreenBrush}" />
                                    </Grid>
                                </Border>
                                
                                <Button
                                    Content="VIEW ALL FLAGGED CONTENT"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{StaticResource PrimaryGreenBrush}"
                                    HorizontalAlignment="Right"
                                    Margin="0,8,0,0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window> 