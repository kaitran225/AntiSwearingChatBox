 <Page x:Class="AntiSwearingChatBox.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dashboard"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    Background="{StaticResource PrimaryBackgroundBrush}"
    FontFamily="Segoe UI"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Dashboard Stats Cards  -->
        <Grid Grid.Row="0" Margin="24,24,24,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Messages Stat Card  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Total Messages" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="1,248" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="MessageText" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="+12% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Users Stat Card  -->
            <Border
                Grid.Column="1"
                Margin="10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Active Users" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="32" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="AccountGroup" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="+5% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="1" 
                   Margin="24,12" 
                   Text="Dashboard content will be displayed here" 
                   FontSize="24" 
                   HorizontalAlignment="Center"/>
    </Grid>
</Page>