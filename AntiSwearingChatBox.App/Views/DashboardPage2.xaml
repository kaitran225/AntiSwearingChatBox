<Page 
    x:Class="AntiSwearingChatBox.App.Views.DashboardPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dashboard"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    Background="{StaticResource PrimaryBackgroundBrush}"
    FontFamily="Segoe UI"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Dashboard Stats Cards  -->
        <Grid Grid.Row="0" Margin="24,24,24,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Messages Stat Card  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Total Messages" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="1,248" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="MessageText" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="+12% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Users Stat Card  -->
            <Border
                Grid.Column="1"
                Margin="10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Active Users" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="32" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="AccountGroup" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="+5% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Swear Words Stat Card  -->
            <Border
                Grid.Column="2"
                Margin="10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Filtered Words" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="347" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="MessageAlert" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingDown" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="-8% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Efficiency Stat Card  -->
            <Border
                Grid.Column="3"
                Margin="10,0,0,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Moderation Efficiency" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="98.7%" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundBrush}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="ShieldCheck" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Text="+0.5% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="1" Margin="24,0,24,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="16"
                HorizontalContentAlignment="Left"
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Click="GoToChat_Click"
                Style="{StaticResource MaterialDesignFlatButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource PrimaryGreenBrush}"
                        Kind="Chat" />
                    <StackPanel Margin="16,0,0,0">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Go to Chat" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Start or continue conversations" />
                    </StackPanel>
                </StackPanel>
            </Button>
            
            <Button
                Grid.Column="1"
                Margin="10,0"
                Padding="16"
                HorizontalContentAlignment="Left"
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Click="ManageProfile_Click"
                Style="{StaticResource MaterialDesignFlatButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource PrimaryGreenBrush}"
                        Kind="AccountCog" />
                    <StackPanel Margin="16,0,0,0">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Manage Profile" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Update your account settings" />
                    </StackPanel>
                </StackPanel>
            </Button>
            
            <Button
                Grid.Column="2"
                Margin="10,0,0,0"
                Padding="16"
                HorizontalContentAlignment="Left"
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Click="ViewReports_Click"
                Style="{StaticResource MaterialDesignFlatButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource PrimaryGreenBrush}"
                        Kind="ChartBar" />
                    <StackPanel Margin="16,0,0,0">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="View Reports" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Check moderation statistics" />
                    </StackPanel>
                </StackPanel>
            </Button>
        </Grid>
        
        <!-- Recent Activity Panel -->
        <Border
            Grid.Row="2"
            Margin="24,0,24,24"
            Padding="24"
            Background="{StaticResource SecondaryBackgroundBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryTextBrush}"
                    Text="Recent Activity" />
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="14"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Welcome to your dashboard! Here you can view moderation statistics and manage your chats."
                            TextWrapping="Wrap" />
                        
                        <TextBlock
                            Margin="0,16,0,8"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="What's New" />
                        
                        <StackPanel Margin="0,8,0,0">
                            <Border
                                Padding="16,12"
                                Background="{StaticResource PrimaryBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Grid.Column="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,16,0"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="New" />
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="New AI moderation engine" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="We've upgraded our filter system for better accuracy"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Top"
                                        FontSize="11"
                                        Foreground="{StaticResource TertiaryTextBrush}"
                                        Text="2 days ago" />
                                </Grid>
                            </Border>
                            
                            <Border
                                Margin="0,8,0,0"
                                Padding="16,12"
                                Background="{StaticResource PrimaryBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Grid.Column="0"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,16,0"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Update" />
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="User interface redesigned" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="We've updated the look and feel of the application"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Top"
                                        FontSize="11"
                                        Foreground="{StaticResource TertiaryTextBrush}"
                                        Text="1 week ago" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page> 