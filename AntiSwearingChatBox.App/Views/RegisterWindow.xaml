<Window x:Class="AntiSwearingChatBox.App.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Register - Anti-Swearing Chat Box" Height="720" Width="1280"
        MinHeight="720" MinWidth="1280" MaxHeight="1080" MaxWidth="1920"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        TextElement.Foreground="#F8F5FF"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderThickness="0">

    <Window.Resources>
        <Style x:Key="InputBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="12,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#121212"/>
            <Setter Property="CaretBrush" Value="#BCD9B4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignPasswordBox}">
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="12,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#121212"/>
            <Setter Property="CaretBrush" Value="#BCD9B4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderBrush" Value="#BCD9B4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" BlurRadius="3" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SocialButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" BlurRadius="3" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FeatureIconStyle" TargetType="Border">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="WindowBarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Window Bar -->
        <Border Grid.Row="0" Background="#111111" BorderThickness="0,0,0,1" BorderBrush="#1E1E1E">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Border Width="16" Height="16" Background="#121212" CornerRadius="8" Margin="0,0,8,0">
                        <TextBlock Text="A" Foreground="#BCD9B4" FontSize="10" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Anti-Swearing Chat - Register" FontSize="11" Foreground="#B3B3B3" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                        <materialDesign:PackIcon Kind="Minus" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                    <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                        <materialDesign:PackIcon Kind="Fullscreen" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Illustration/Branding -->
            <Grid Grid.Column="0" Background="#0A0A0A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Illustration and Welcome Message -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40,0">
                    <TextBlock Text="Join our" FontSize="28" FontWeight="Regular" Foreground="#F8F5FF"/>
                    <TextBlock Text="Positive Community" FontSize="36" FontWeight="Bold" Foreground="#BCD9B4" Margin="0,8,0,16"/>
                    <TextBlock Text="Sign up today and experience communication without the negativity of inappropriate language." 
                               FontSize="16" Foreground="#B3B3B3" TextWrapping="Wrap" MaxWidth="360" LineHeight="24"/>
                    
                    <!-- Feature Cards -->
                    <Grid Margin="0,32,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Card 1 -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource FeatureCardStyle}" Margin="0,0,8,8">
                            <StackPanel>
                                <Border Style="{StaticResource FeatureIconStyle}">
                                    <materialDesign:PackIcon Kind="ShieldCheck" Width="18" Height="18" Foreground="#BCD9B4" 
                                                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="AI Moderation" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#F8F5FF" Margin="0,10,0,4"/>
                                <TextBlock Text="Smart filtering of inappropriate content" FontSize="11" 
                                           Foreground="#B3B3B3" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Card 2 -->
                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource FeatureCardStyle}" Margin="8,0,0,8">
                            <StackPanel>
                                <Border Style="{StaticResource FeatureIconStyle}">
                                    <materialDesign:PackIcon Kind="ChatProcessing" Width="18" Height="18" Foreground="#BCD9B4" 
                                                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Real-time Chat" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#F8F5FF" Margin="0,10,0,4"/>
                                <TextBlock Text="Instant messaging with typing indicators" FontSize="11" 
                                           Foreground="#B3B3B3" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Card 3 -->
                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource FeatureCardStyle}" Margin="0,8,8,0">
                            <StackPanel>
                                <Border Style="{StaticResource FeatureIconStyle}">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="18" Height="18" Foreground="#BCD9B4" 
                                                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Group Chats" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#F8F5FF" Margin="0,10,0,4"/>
                                <TextBlock Text="Create and manage multiple conversations" FontSize="11" 
                                           Foreground="#B3B3B3" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Card 4 -->
                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource FeatureCardStyle}" Margin="8,8,0,0">
                            <StackPanel>
                                <Border Style="{StaticResource FeatureIconStyle}">
                                    <materialDesign:PackIcon Kind="ThemeLightDark" Width="18" Height="18" Foreground="#BCD9B4" 
                                                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Dark Mode" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#F8F5FF" Margin="0,10,0,4"/>
                                <TextBlock Text="Comfortable UI for day and night" FontSize="11" 
                                           Foreground="#B3B3B3" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="40,0,0,32">
                    <TextBlock Text="Â© 2023 Anti-Swearing Chat Box" Foreground="#616161" FontSize="11"/>
                </StackPanel>
            </Grid>
            
            <!-- Right Side - Register Form -->
            <Border Grid.Column="1" Background="#0D0D0D" BorderThickness="1,0,0,0" BorderBrush="#1E1E1E">
                <!-- Form Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" Padding="0,0,0,24">
                    <StackPanel Width="300" Margin="0,10,0,10" HorizontalAlignment="Center">
                        <TextBlock Text="Create Account" FontSize="32" FontWeight="SemiBold" Foreground="#F8F5FF" Margin="0,0,0,8"/>
                        <TextBlock Text="Join our community today! Please fill in your details below." FontSize="14" 
                                   Foreground="#B3B3B3" Margin="0,0,0,24" TextWrapping="Wrap"/>
                        
                        <!-- Username Input -->
                        <TextBox Style="{StaticResource InputBoxStyle}"
                                 materialDesign:HintAssist.Hint="Username"
                                 materialDesign:TextFieldAssist.HasClearButton="True">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <!-- Email Input -->
                        <TextBox Style="{StaticResource InputBoxStyle}"
                                 materialDesign:HintAssist.Hint="Email Address"
                                 materialDesign:TextFieldAssist.HasClearButton="True">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <!-- Password Input -->
                        <PasswordBox Style="{StaticResource PasswordBoxStyle}"
                                     materialDesign:HintAssist.Hint="Password">
                            <PasswordBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                        
                        <!-- Password Strength Indicator -->
                        <Grid Margin="0,4,0,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Strength Bar -->
                            <Grid Grid.Row="0" Height="3" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Background="#BCD9B4" CornerRadius="2,0,0,2"/>
                                <Border Grid.Column="1" Background="#BCD9B4"/>
                                <Border Grid.Column="2" Background="#BCD9B4"/>
                                <Border Grid.Column="3" Background="#333333" CornerRadius="0,2,2,0"/>
                            </Grid>
                            
                            <!-- Strength Text -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="Password Strength: " Foreground="#B3B3B3" FontSize="11"/>
                                <TextBlock Text="Strong" Foreground="#BCD9B4" FontSize="11" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Confirm Password -->
                        <PasswordBox Style="{StaticResource PasswordBoxStyle}"
                                     materialDesign:HintAssist.Hint="Confirm Password">
                            <PasswordBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                        
                        <!-- Terms & Conditions -->
                        <CheckBox Content="I agree to the terms and privacy policy" Foreground="#B3B3B3" FontSize="12"
                                  BorderBrush="#BCD9B4" Background="Transparent" Margin="0,16,0,0"/>
                        
                        <!-- Register Button -->
                        <Button Content="Create Account" Style="{StaticResource PrimaryButtonStyle}"/>
                        
                        <!-- Login Link -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                            <TextBlock Text="Already have an account?" Foreground="#B3B3B3" FontSize="12"/>
                            <TextBlock x:Name="btnLogin" Text="Log in" Foreground="#BCD9B4" FontWeight="SemiBold" 
                                       FontSize="12" Cursor="Hand" Margin="6,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Social Registration -->
                        <StackPanel Margin="0,32,0,0">
                            <Border BorderThickness="0,0,0,1" BorderBrush="#1E1E1E" Margin="0,0,0,24">
                                <TextBlock Text="OR REGISTER WITH" Foreground="#616161" FontSize="10" 
                                          HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            </Border>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Button Grid.Column="0" Style="{StaticResource SocialButtonStyle}" Margin="0,0,4,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Google" Width="16" Height="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="Google" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="1" Style="{StaticResource SocialButtonStyle}" Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Microsoft" Width="16" Height="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="Microsoft" Margin="6,0,0,0" VerticalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window> 