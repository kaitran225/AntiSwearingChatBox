<UserControl
    x:Class="AntiSwearingChatBox.WPF.Components.ChatHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="800">

    <Border
        Padding="20,14"
        Background="{StaticResource TertiaryBackgroundBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="0,0,0,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border
                Width="46"
                Height="46"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="23">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryGreenBrush}"
                    Text="{Binding AvatarText}" />
            </Border>

            <StackPanel
                Grid.Column="1"
                Margin="16,0,0,0"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryTextBrush}"
                    Text="{Binding DisplayName}" />
                <TextBlock
                    Margin="0,3,0,0"
                    FontSize="13"
                    Foreground="{StaticResource SecondaryTextBrush}"
                    Text="{Binding StatusText}" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                Visibility="{Binding ShowActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button
                    Width="40"
                    Height="40"
                    Margin="4,0"
                    Padding="8"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderThickness="0"
                    Click="MenuButton_Click">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Foreground="{StaticResource PrimaryTextBrush}"
                        Kind="DotsVertical" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 