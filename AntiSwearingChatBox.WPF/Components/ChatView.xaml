<UserControl
    x:Class="AntiSwearingChatBox.WPF.Components.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
    xmlns:converters="clr-namespace:AntiSwearingChatBox.WPF.Converters"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToColumnConverter x:Key="BoolToColumnConverter"/>
        <converters:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource TertiaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1"
                Padding="16"
                Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding CurrentContact.Name}" 
                         Foreground="{StaticResource PrimaryTextBrush}"
                         FontSize="16"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                        Style="{StaticResource WindowBarButtonStyle}"
                        Click="MenuButton_Click">
                    <TextBlock Text="â‹®" FontSize="20" Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Empty State - No Conversation Selected -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="{StaticResource PrimaryBackgroundBrush}"
              Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="400">
                <materialDesign:PackIcon Kind="ChatOutline" 
                                      Width="64" 
                                      Height="64" 
                                      Foreground="{StaticResource SecondaryTextBrush}" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,16"/>
                <TextBlock Text="Select a conversation" 
                         Foreground="{StaticResource PrimaryTextBrush}"
                         FontSize="24"
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,8"/>
                <TextBlock Text="Choose an existing conversation from the list or start a new chat to begin messaging."
                         Foreground="{StaticResource SecondaryTextBrush}"
                         FontSize="14"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,0,0,24"/>
                <Button Content="New Conversation"
                      Style="{StaticResource PrimaryButtonStyle}"
                      HorizontalAlignment="Center"
                      Width="200"
                      Click="NewConversationButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Messages List -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="MessagesScroll"
                      VerticalScrollBarVisibility="Auto"
                      Background="{StaticResource PrimaryBackgroundBrush}"
                      Padding="0,12"
                      Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsControl x:Name="MessagesList" 
                         ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ChatMessageViewModel}">
                        <Grid Margin="16,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar (for received messages) -->
                            <Border Grid.Column="{Binding IsSent, Converter={StaticResource BoolToColumnConverter}}"
                                    Width="36" Height="36"
                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                    BorderThickness="0"
                                    CornerRadius="18"
                                    Margin="0,0,8,0">
                                <TextBlock Text="{Binding Avatar}"
                                         Foreground="{StaticResource PrimaryGreenBrush}"
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>

                            <!-- Message Bubble -->
                            <Border x:Name="MessageBubble" 
                                    CornerRadius="18" 
                                    Padding="12,8"
                                    Background="{Binding IsSent, Converter={StaticResource MessageBackgroundConverter}}"
                                    BorderThickness="{Binding IsSent, Converter={StaticResource MessageBorderThicknessConverter}}"
                                    BorderBrush="#555555"
                                    MaxWidth="600"
                                    HorizontalAlignment="{Binding IsSent, Converter={StaticResource MessageAlignmentConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}"
                                             Foreground="{Binding IsSent, Converter={StaticResource MessageForegroundConverter}}"
                                             TextWrapping="Wrap"
                                             FontSize="14"/>
                                    <TextBlock Text="{Binding Timestamp}"
                                             Foreground="{StaticResource TertiaryTextBrush}"
                                             FontSize="11"
                                             HorizontalAlignment="Right"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Message Input -->
        <Border Grid.Row="2" 
                Background="{StaticResource TertiaryBackgroundBrush}"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource WindowBarButtonStyle}"
                        Click="AttachmentButton_Click">
                    <TextBlock Text="ðŸ“Ž" FontSize="20" Foreground="{StaticResource PrimaryTextBrush}"/>
                </Button>

                <TextBox Grid.Column="1"
                         x:Name="MessageTextBox"
                         Margin="10,0"
                         Style="{StaticResource ChatInputStyle}"
                         Background="{StaticResource SecondaryBackgroundBrush}"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         CaretBrush="{StaticResource PrimaryGreenBrush}"
                         AcceptsReturn="False"/>

                <Button Grid.Column="2"
                        Style="{StaticResource WindowBarButtonStyle}"
                        Background="{StaticResource PrimaryGreenBrush}"
                        Click="SendButton_Click">
                    <TextBlock Text="âž¤" FontSize="18" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl> 