<UserControl
    x:Class="AntiSwearingChatBox.WPF.Components.ConversationItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border
        Margin="4,3"
        Padding="12,12"
        Background="{Binding Background, FallbackValue={StaticResource SecondaryBackgroundBrush}}"
        BorderBrush="{Binding BorderBrush, FallbackValue={StaticResource BorderBrush}}"
        BorderThickness="{Binding BorderThickness, FallbackValue=0}"
        CornerRadius="8"
        Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Width="42"
                Height="42"
                Margin="0,0,12,0"
                Background="{StaticResource TertiaryBackgroundBrush}"
                CornerRadius="21">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryGreenBrush}"
                    Text="{Binding AvatarText}" />
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryTextBrush}"
                    Text="{Binding DisplayName}"
                    TextTrimming="CharacterEllipsis" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,6,0,0"
                    FontSize="12"
                    Foreground="{StaticResource SecondaryTextBrush}"
                    Text="{Binding LastMessage}"
                    TextTrimming="CharacterEllipsis" />

                <StackPanel
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    VerticalAlignment="Top">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="11"
                        Foreground="{Binding TimestampForeground, FallbackValue={StaticResource TertiaryTextBrush}}"
                        Text="{Binding Timestamp}" />
                    <Border
                        Width="20"
                        Height="20"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Right"
                        Background="{StaticResource PrimaryGreenBrush}"
                        CornerRadius="10"
                        Visibility="{Binding HasUnread, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{Binding UnreadCount}" />
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl> 