<UserControl
    x:Class="AntiSwearingChatBox.WPF.Components.ConversationItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border
        Margin="0,3"
        Padding="12,10"
        Background="{Binding Background}"
        BorderBrush="{Binding BorderBrush}"
        BorderThickness="{Binding BorderThickness}"
        CornerRadius="4"
        Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Width="36"
                Height="36"
                Margin="0,0,10,0"
                Background="{StaticResource TertiaryBackgroundBrush}"
                CornerRadius="18">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="{Binding AvatarForeground}"
                    Text="{Binding AvatarText}" />
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PrimaryTextBrush}"
                    Text="{Binding DisplayName}" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,4,0,0"
                    FontSize="12"
                    Foreground="{StaticResource SecondaryTextBrush}"
                    Text="{Binding LastMessage}"
                    TextTrimming="CharacterEllipsis" />

                <StackPanel
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="6,0,0,0"
                    VerticalAlignment="Top">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="10"
                        Foreground="{Binding TimestampForeground}"
                        Text="{Binding Timestamp}" />
                    <Border
                        Width="16"
                        Height="16"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Right"
                        Background="{StaticResource PrimaryGreenBrush}"
                        CornerRadius="8"
                        Visibility="{Binding HasUnread, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="9"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="{Binding UnreadCount}" />
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl> 