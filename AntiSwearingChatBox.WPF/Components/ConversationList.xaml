<UserControl
    x:Class="AntiSwearingChatBox.WPF.Components.ConversationList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="320"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Search Bar  -->
        <Border
            Grid.Row="0"
            Padding="16,12"
            Background="{StaticResource PrimaryBackgroundBrush}">
            <Border
                Padding="0"
                Background="{StaticResource SecondaryBackgroundBrush}"
                CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource TertiaryTextBrush}"
                        Kind="Magnify" />
                    <TextBox
                        x:Name="SearchBox"
                        Grid.Column="1"
                        Margin="8,8,12,8"
                        materialDesign:HintAssist.Hint="Search conversations"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="{StaticResource PrimaryGreenBrush}"
                        FontSize="13"
                        Foreground="{StaticResource SecondaryTextBrush}"
                        TextChanged="SearchBox_TextChanged" />
                </Grid>
            </Border>
        </Border>

        <!--  Conversation List  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="16,12"
            Padding="16,0,16,8"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="0,12,0,8">
                    <TextBlock
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TertiaryTextBrush}"
                        Text="CONVERSATIONS" />
                    <Button
                        Padding="4"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="AddConversation_Click"
                        Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{StaticResource TertiaryTextBrush}"
                            Kind="PlusCircleOutline" />
                    </Button>
                </Grid>

                <!--  Conversations  -->
                <ItemsControl x:Name="ConversationsItemsControl" ItemsSource="{Binding Conversations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ConversationItem
                                Margin="0,3"
                                AvatarText="{Binding Avatar}"
                                DisplayName="{Binding Title}"
                                HasUnread="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}"
                                IsActive="{Binding IsSelected}"
                                LastMessage="{Binding LastMessage}"
                                Selected="ConversationItem_Selected"
                                Tag="{Binding Id}"
                                Timestamp="{Binding LastMessageTime}"
                                UnreadCount="{Binding UnreadCount}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock
                    Margin="0,20,0,8"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TertiaryTextBrush}"
                    Text="GROUPS"
                    Visibility="{Binding HasGroups, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!--  Groups  -->
                <ItemsControl x:Name="GroupsItemsControl" ItemsSource="{Binding Groups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ConversationItem
                                Margin="0,3"
                                AvatarText="{Binding Avatar}"
                                DisplayName="{Binding Title}"
                                HasUnread="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}"
                                IsActive="{Binding IsSelected}"
                                LastMessage="{Binding LastMessage}"
                                Selected="ConversationItem_Selected"
                                Tag="{Binding Id}"
                                Timestamp="{Binding LastMessageTime}"
                                UnreadCount="{Binding UnreadCount}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!--  Bottom Actions  -->
        <Border
            Grid.Row="2"
            Padding="16,12"
            Background="{StaticResource PrimaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,1,0,0">
            <StackPanel>
                <Button
                    Margin="0,0,0,8"
                    Padding="10,8"
                    HorizontalAlignment="Stretch"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderThickness="0"
                    Click="NewChat_Click"
                    Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="Plus" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="New Chat" />
                    </Grid>
                </Button>

                <!--  Admin Dashboard Button  -->
                <Button
                    x:Name="AdminDashboardButton"
                    Padding="10,8"
                    HorizontalAlignment="Stretch"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderThickness="0"
                    Click="AdminDashboard_Click"
                    Cursor="Hand"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryGreenBrush}"
                            Kind="ShieldAccount" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Admin Dashboard" />
                    </Grid>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 