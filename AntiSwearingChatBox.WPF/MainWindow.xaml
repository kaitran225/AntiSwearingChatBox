<Window
    x:Class="AntiSwearingChatBox.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:AntiSwearingChatBox.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Anti-Swearing Chat Box"
    Width="1280"
    Height="720"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    Background="{StaticResource PrimaryBackgroundBrush}"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Anti-Swearing Chat Box" 
                       Style="{StaticResource HeadingTextStyle}"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            <TextBlock Text="Welcome to the application" 
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="18" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>
            <Button Content="Launch Full Application" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="250" 
                    Height="54" 
                    Click="LaunchAppButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 