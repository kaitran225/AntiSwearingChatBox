<Page
    x:Class="AntiSwearingChatBox.WPF.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="720" d:DesignWidth="1280"
    Title="Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Welcome Text -->
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    Margin="64,0">
            <TextBlock Text="Welcome to"
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="24"/>
            <TextBlock Text="Anti-Swearing Chat Box"
                       Style="{StaticResource HeadingTextStyle}"
                       FontSize="48"/>
            <TextBlock Text="A safe space for communication"
                       Style="{StaticResource BodyTextStyle}"
                       Margin="0,16,0,0"/>
        </StackPanel>

        <!-- Middle - Login Form -->
        <Border Grid.Column="1" 
                Width="400" 
                Style="{StaticResource FeatureCardStyle}"
                Margin="32,0">
            <StackPanel Margin="32">
                <TextBlock Text="Login"
                           Style="{StaticResource SubheadingTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource StandardInputStyle}"
                         materialDesign:HintAssist.Hint="Username"
                         Margin="0,0,0,16"/>

                <PasswordBox x:Name="PasswordBox"
                            Style="{StaticResource StandardPasswordStyle}"
                            materialDesign:HintAssist.Hint="Password"
                            Margin="0,0,0,24"/>

                <Button Content="Login"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="LoginButton_Click"/>

                <Button Content="Register"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,16,0,0"
                        Click="RegisterButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Right side - Features -->
        <StackPanel Grid.Column="2" 
                    VerticalAlignment="Center" 
                    Margin="64,0">
            <TextBlock Text="Features"
                       Style="{StaticResource SubheadingTextStyle}"
                       Margin="0,0,0,24"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="ShieldCheck" 
                                       Width="24" 
                                       Height="24" 
                                       Foreground="{StaticResource PrimaryGreenBrush}"
                                       VerticalAlignment="Center"/>
                <TextBlock Text="AI-powered content filtering"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="Chat" 
                                       Width="24" 
                                       Height="24" 
                                       Foreground="{StaticResource PrimaryGreenBrush}"
                                       VerticalAlignment="Center"/>
                <TextBlock Text="Real-time chat messaging"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="AccountGroup" 
                                       Width="24" 
                                       Height="24" 
                                       Foreground="{StaticResource PrimaryGreenBrush}"
                                       VerticalAlignment="Center"/>
                <TextBlock Text="User management and moderation"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 