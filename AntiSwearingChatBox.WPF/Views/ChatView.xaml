<Window x:Class="AntiSwearingChatBox.WPF.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Views"
        xmlns:converters="clr-namespace:AntiSwearingChatBox.WPF.Converters"
        mc:Ignorable="d"
        Title="Chat" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF007ACC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Anti-Swearing ChatBox"
                       Foreground="White"
                       FontSize="20"
                       Margin="10"/>
            
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="10">
                <TextBlock Text="Welcome, "
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentUser}"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <Button Content="Logout"
                        Command="{Binding LogoutCommand}"
                        Margin="10,0,0,0"
                        Padding="10,5"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Thread List -->
            <Grid Grid.Column="0" Background="#F0F0F0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Chat Threads" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Content="+" 
                            Command="{Binding CreateThreadCommand}"
                            Margin="10,0,0,0" 
                            Padding="5,0" 
                            ToolTip="Create New Thread"/>
                    <Button Content="âŸ³" 
                            Command="{Binding RefreshThreadsCommand}"
                            Margin="5,0,0,0" 
                            Padding="5,0" 
                            ToolTip="Refresh Threads"/>
                </StackPanel>

                <ListView Grid.Row="1" 
                          ItemsSource="{Binding Threads}"
                          SelectedItem="{Binding SelectedThread, Mode=TwoWay}"
                          BorderThickness="0"
                          Margin="0,5,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat='Created: {0:g}'}" 
                                           FontSize="11" 
                                           Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Messages -->
                <ListView Grid.Row="0" 
                          ItemsSource="{Binding Messages}"
                          Background="#FFF5F5F5"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    Margin="5" 
                                    Padding="10" 
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <DockPanel Grid.Row="0">
                                        <TextBlock Text="{Binding Username}"
                                                 FontWeight="Bold"
                                                 DockPanel.Dock="Left"/>
                                        
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:g}'}"
                                                 FontSize="10"
                                                 Foreground="Gray"
                                                 TextAlignment="Right"
                                                 DockPanel.Dock="Right"/>
                                    </DockPanel>
                                    
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding Content}"
                                             TextWrapping="Wrap"
                                             Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="2"
                                             Text="This message was filtered"
                                             Foreground="Red"
                                             FontStyle="Italic"
                                             FontSize="10"
                                             Margin="0,5,0,0"
                                             Visibility="{Binding IsFiltered, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Message Input -->
                <Grid Grid.Row="1" 
                      Background="White" 
                      Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource PlaceholderTextBoxStyle}"
                            Tag="Type your message..."
                            Margin="0,5"
                            Padding="5"/>
                    
                    <Button Grid.Column="1"
                            Content="Send"
                            Command="{Binding SendMessageCommand}"
                            Margin="10,5,5,5"
                            Padding="20,5"/>
                </Grid>
            </Grid>
            
            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Loading..." Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window> 