<Window x:Class="AntiSwearingChatBox.WPF.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Views"
        xmlns:converters="clr-namespace:AntiSwearingChatBox.WPF.Converters"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" 
                    Width="300" 
                    VerticalAlignment="Center" 
                    Margin="20">
            <TextBlock Text="Welcome to Anti-Swearing ChatBox"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox x:Name="UsernameTextBox"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Username"
                     Margin="0,0,0,10"
                     Padding="5"/>

            <PasswordBox x:Name="PasswordBox"
                         Margin="0,0,0,10"
                         Padding="5"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    Height="35"
                    Margin="0,0,0,10"/>

            <Button Content="Register"
                    Command="{Binding NavigateToRegisterCommand}"
                    Height="35"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
        </StackPanel>
    </Grid>
</Window> 