<Page
    x:Class="AntiSwearingChatBox.WPF.View.SimpleChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:converters="clr-namespace:AntiSwearingChatBox.WPF.Converters"
    Title="Chat - Anti-Swearing Chat Box"
    Background="{StaticResource PrimaryBackgroundBrush}"
    FontFamily="Segoe UI"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
        <converters:MessageForegroundConverter x:Key="MessageForegroundConverter"/>
        <converters:MessageBorderThicknessConverter x:Key="MessageBorderThicknessConverter"/>
        <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
        <converters:BoolToColumnConverter x:Key="BoolToColumnConverter"/>
        <converters:FirstCharConverter x:Key="FirstCharConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar with Conversation List -->
            <Border
                Grid.Column="0"
                Background="{StaticResource PrimaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- User Display Section -->
                    <Border 
                        Grid.Row="0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        Padding="16,12">
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Width="32"
                                Height="32"
                                Background="{StaticResource PrimaryGreenBrush}"
                                CornerRadius="16">
                                <TextBlock
                                    x:Name="UserInitials"
                                    Text="U"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock
                                x:Name="UserDisplayName"
                                Text="User"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Search Bar -->
                    <Border
                        Grid.Row="1"
                        Padding="16,12"
                        Background="{StaticResource PrimaryBackgroundBrush}">
                        <Border
                            Padding="0"
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Kind="Magnify" />
                                <TextBox
                                    x:Name="SearchBox"
                                    Grid.Column="1"
                                    Margin="8,8,12,8"
                                    materialDesign:HintAssist.Hint="Search conversations"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CaretBrush="{StaticResource PrimaryGreenBrush}"
                                    FontSize="13"
                                    Foreground="{StaticResource SecondaryTextBrush}"
                                    TextChanged="SearchBox_TextChanged" />
                            </Grid>
                        </Border>
                    </Border>

                    <!-- Conversation List -->
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="16,60,16,8"
                        Padding="0,0,0,8"
                        VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Grid Margin="0,12,0,8">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Text="CONVERSATIONS" />
                            </Grid>

                            <!-- Conversations -->
                            <ItemsControl x:Name="ConversationsItemsControl" ItemsSource="{Binding Conversations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            x:Name="ConversationItemBorder"
                                            Margin="4,3"
                                            Padding="12,12"
                                            Background="{Binding Background, FallbackValue={StaticResource SecondaryBackgroundBrush}}"
                                            BorderBrush="{Binding BorderBrush, FallbackValue={StaticResource BorderBrush}}"
                                            BorderThickness="{Binding BorderThickness, FallbackValue=0}"
                                            CornerRadius="8"
                                            Cursor="Hand"
                                            Tag="{Binding Id}"
                                            MouseLeftButtonDown="ConversationItem_MouseLeftButtonDown">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar -->
                                                <Border
                                                    Width="42"
                                                    Height="42"
                                                    Margin="0,0,12,0"
                                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                                    CornerRadius="21">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontWeight="SemiBold"
                                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                                        Text="{Binding Avatar}" />
                                                </Border>

                                                <Grid Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Title -->
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="{StaticResource PrimaryTextBrush}"
                                                        Text="{Binding Title}"
                                                        TextTrimming="CharacterEllipsis" />

                                                    <!-- Last Message -->
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Margin="0,6,0,0"
                                                        FontSize="12"
                                                        Foreground="{StaticResource SecondaryTextBrush}"
                                                        Text="{Binding LastMessage}"
                                                        TextTrimming="CharacterEllipsis" />

                                                    <!-- Timestamp -->
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Right"
                                                        FontSize="11"
                                                        Foreground="{StaticResource TertiaryTextBrush}"
                                                        Text="{Binding LastMessageTime}" />

                                                    <!-- Unread Counter -->
                                                    <Border
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Width="20"
                                                        Height="20"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Right"
                                                        Background="{StaticResource PrimaryGreenBrush}"
                                                        CornerRadius="10"
                                                        Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontSize="10"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="{Binding UnreadCount}" />
                                                    </Border>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Bottom Actions -->
                    <Border
                        Grid.Row="2"
                        Padding="16,12"
                        Background="{StaticResource PrimaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                        <StackPanel>
                            <Button
                                x:Name="NewChatButton"
                                Margin="0,0,0,8"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Click="NewChat_Click"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Plus" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="New Chat" />
                                </Grid>
                            </Button>

                            <!-- Admin Dashboard Button -->
                            <Button
                                x:Name="AdminDashboardButton"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Click="AdminDashboard_Click"
                                Cursor="Hand"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="ShieldAccount" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="Admin Dashboard" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Chat Header -->
                <Border 
                    Grid.Row="0"
                    Background="{StaticResource TertiaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16"
                    Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Contact Avatar -->
                        <Border 
                            Width="38" 
                            Height="38" 
                            Background="{StaticResource PrimaryGreenBrush}"
                            CornerRadius="19"
                            Margin="0,0,12,0">
                            <TextBlock 
                                x:Name="ContactAvatarText"
                                Text="{Binding CurrentContactName, Converter={StaticResource FirstCharConverter}, FallbackValue=?}"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                            
                            <!-- Online Status Indicator -->
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Online Indicator -->
                        <Border 
                            Width="12" 
                            Height="12" 
                            Background="#47D068"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="6"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                            </Border.Effect>
                        </Border>

                        <!-- Contact Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                x:Name="ContactNameDisplay"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="{Binding CurrentContactName}" />
                            
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource SecondaryTextBrush}"
                                Text="Online now"
                                Margin="0,2,0,0" />
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button
                                Margin="4,0"
                                Style="{StaticResource WindowBarButtonStyle}"
                                Click="CallButton_Click">
                                <materialDesign:PackIcon
                                    Kind="Phone"
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource PrimaryGreenBrush}" />
                            </Button>
                            
                            <Button
                                Margin="4,0"
                                Style="{StaticResource WindowBarButtonStyle}"
                                Click="VideoCallButton_Click">
                                <materialDesign:PackIcon
                                    Kind="Video"
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource PrimaryGreenBrush}" />
                            </Button>
                            
                            <Button
                                Margin="4,0"
                                Click="MenuButton_Click"
                                Style="{StaticResource WindowBarButtonStyle}">
                                <TextBlock
                                    FontSize="20"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    Text="⋮" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Empty State - No Conversation Selected -->
                <Grid
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Background="{StaticResource PrimaryBackgroundBrush}"
                    Visibility="{Binding HasSelectedConversation, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel
                        MaxWidth="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <materialDesign:PackIcon
                            Width="64"
                            Height="64"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Kind="ChatOutline" />
                        <TextBlock
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Text="Select a conversation" />
                        <TextBlock
                            Margin="0,0,0,24"
                            FontSize="14"
                            Foreground="{StaticResource SecondaryTextBrush}"
                            Text="Choose an existing conversation from the list or start a new chat to begin messaging."
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Center"
                            Click="NewChat_Click"
                            Content="New Conversation"
                            Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </Grid>

                <!-- Messages List -->
                <Grid Grid.Row="1">
                    <Image
                        Opacity="0.4"
                        Source="/Resources/LoginPage/bg.png"
                        Stretch="UniformToFill" />
                    <Border Background="#121212" Opacity="0.85" />
                    <ScrollViewer
                        x:Name="MessagesScroll"
                        Padding="0,12"
                        VerticalScrollBarVisibility="Hidden"
                        Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl x:Name="MessagesList" ItemsSource="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="16,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar (for received messages) -->
                                        <Border
                                            Grid.Column="0"
                                            Width="36"
                                            Height="36"
                                            Margin="0,0,8,0"
                                            Background="{StaticResource TertiaryBackgroundBrush}"
                                            BorderThickness="0"
                                            CornerRadius="18"
                                            Visibility="{Binding IsSent, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource PrimaryGreenBrush}"
                                                Text="{Binding Avatar}" />
                                        </Border>

                                        <!-- Message Bubble -->
                                        <Border
                                            Grid.Column="{Binding IsSent, Converter={StaticResource BoolToColumnConverter}, ConverterParameter=1:1}"
                                            MaxWidth="600"
                                            Padding="12,8"
                                            HorizontalAlignment="{Binding IsSent, Converter={StaticResource MessageAlignmentConverter}}"
                                            Background="{Binding IsSent, Converter={StaticResource MessageBackgroundConverter}}"
                                            BorderBrush="{StaticResource MatchaGreenBrush}"
                                            BorderThickness="{Binding IsSent, Converter={StaticResource MessageBorderThicknessConverter}}"
                                            CornerRadius="18">
                                            <StackPanel>
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="{Binding IsSent, Converter={StaticResource MessageForegroundConverter}}"
                                                    Text="{Binding Text}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    HorizontalAlignment="Right"
                                                    FontSize="11"
                                                    Foreground="{StaticResource TertiaryTextBrush}"
                                                    Text="{Binding Timestamp}" />
                                            </StackPanel>
                                        </Border>

                                        <!-- Avatar (for sent messages) -->
                                        <Border
                                            Grid.Column="2"
                                            Width="36"
                                            Height="36"
                                            Margin="8,0,0,0"
                                            Background="{StaticResource TertiaryBackgroundBrush}"
                                            BorderThickness="0"
                                            CornerRadius="18"
                                            Visibility="{Binding IsSent, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource PrimaryGreenBrush}"
                                                Text="{Binding Avatar}" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- Message Input -->
                <Border
                    Grid.Row="2"
                    Padding="16,12"
                    Background="{StaticResource TertiaryBackgroundBrush}"
                    Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button Click="AttachmentButton_Click" Style="{StaticResource WindowBarButtonStyle}">
                            <TextBlock
                                FontSize="20"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="📎" />
                        </Button>

                        <TextBox
                            x:Name="MessageTextBox"
                            Grid.Column="1"
                            Margin="10,0"
                            AcceptsReturn="False"
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            CaretBrush="{StaticResource PrimaryGreenBrush}"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            Style="{StaticResource ChatInputStyle}"
                            KeyDown="MessageTextBox_KeyDown" />

                        <Button
                            Grid.Column="2"
                            Background="{StaticResource PrimaryGreenBrush}"
                            Click="SendButton_Click"
                            Style="{StaticResource WindowBarButtonStyle}">
                            <TextBlock
                                FontSize="18"
                                Foreground="White"
                                Text="➤" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page> 